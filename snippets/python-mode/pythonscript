#!/usr/bin/python

import argparse

if __name__ == '__main__':
    parser = argparse.ArgumentParser()
    parser.add_argument('file name',
                        metavar = 'filename',
		        help = 'the name of the file')
    args = parser.parse_args()
    print(args.filename)
   